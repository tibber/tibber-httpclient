{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": false,
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node"
    },
    "include": [
        "./src",
        "./test",
        "./.prettierrc.json",
        "./package.json",
        "./.eslintrc.json",
        "./jest.config.js",
        "./jest-setup.js"
    ]
}
