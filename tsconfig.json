{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "noUnusedParameters": true,
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "./src",
    "./test",
    "./.prettierrc.json",
    "./package.json",
    "./.eslintrc.json",
    "./renovate.json",
    "./babel.config.js",
    "./jest.config.js",
    "./jest-setup.js"
  ]
}
